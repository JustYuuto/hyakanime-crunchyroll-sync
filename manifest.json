{
  "name": "Hyakanime Crunchyroll Sync",
  "description": "Synchronisation automatique des Ã©pisodes que vous regardez sur Crunchyroll, directement sur Hyakanime.",
  "manifest_version": 3,
  "version": "1.0.1",
  "permissions": ["tabs", "activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://www.crunchyroll.com/*"],
      "js": ["js/content-script.js"]
    }
  ],
  "host_permissions": [
    "*://www.crunchyroll.com/*", "*://www.hyakanime.fr/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  }
}
